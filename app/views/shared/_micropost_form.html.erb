<%= form_for(@micropost) do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <div class="field">
    <%= f.text_area :content, placeholder: t(".place_holder") %>
  </div>

  <%= f.submit "Post", class: "btn btn-primary" %>

  <span class="image">
    <%= f.file_field :picture %>
  </span>
<% end %>
