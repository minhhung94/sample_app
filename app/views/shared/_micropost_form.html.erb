<%= form_for @micropost do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="form-group">
    <%= f.text_area :content, placeholder: t(".place_holder"),
      class: "form-control field" %>
  </div>
  <div class="form-group">
    <span class="image">
      <%= f.file_field :picture, direct_upload: true,
        accept: Settings.micropost.view.micro_form.img_accept %>
    </span>
  </div>
  <%= f.submit t(".post"), class: "btn btn-primary" %>
<% end %>
